{
	"name": "server",
	"version": "1.0.0",
	"description": "Server for personal portfolio",
	"main": "index.js",
	"engines": {
		"node": "10.14.2"
	},
	"scripts": {
		"build": "npm-run-all copy-* build-ts",
		"build-ts": "tsc -p tsconfig.json",
		"clean": "rm -rf ./node_modules || exit 0",
		"copy-templates": "ncp ./src/views/templates ./build/views/templates",
		"copy-fixtures": "ncp ./src/__tests__/fixtures ./build/__tests__/fixtures",
		"dev": "npm link css; npm run watch",
		"start-debug": "node --inspect start.js",
		"start": "node ./build/start.js",
		"test": "lab ./build/__tests__/",
		"lint": "eslint \"**/*.js\"",
		"watch": "nodemon --delay 500ms --watch build -e js,html -x 'npm run start-debug'",
		"watch-ts": "npm run build-ts -- --watch",
		"watch-build": "npm-run-all copy-* watch-ts",
		"watch-test": "nodemon --delay 500ms --watch build -e js,json,html,md -x 'npm test'"
	},
	"keywords": [
		"personal",
		"portfolio",
		"hapi",
		"server"
	],
	"author": {
		"email": "npm@iampeterbanjo.com",
		"name": "Peter Banjo"
	},
	"license": "ISC",
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"prettier": "@iampeterbanjo/diva",
	"dependencies": {
		"@hapi/catbox": "^10.2.1",
		"@hapi/code": "^5.3.1",
		"@hapi/glue": "^6.1.0",
		"@hapi/good": "^8.2.0",
		"@hapi/good-console": "^8.1.0",
		"@hapi/good-squeeze": "^5.2.0",
		"@hapi/hapi": "^18.3.1",
		"@hapi/inert": "^5.2.1",
		"@hapi/joi": "^15.0.3",
		"@hapi/lab": "^18.1.2",
		"@hapi/vision": "^5.5.2",
		"@hapi/wreck": "^15.0.1",
		"acorn": "^6.1.1",
		"bluebird": "^3.5.4",
		"boom": "^7.3.0",
		"catbox-mongodb": "^4.2.1",
		"cheerio": "^1.0.0-rc.3",
		"css": "file:../css",
		"fecha": "^3.0.3",
		"fs-extra": "^7.0.1",
		"glob": "^7.1.3",
		"globby": "^9.2.0",
		"gray-matter": "^4.0.2",
		"hapi-dev-errors": "^3.2.4",
		"jsonata": "^1.6.4",
		"lyricist": "^2.2.2",
		"marked": "^0.7.0",
		"mongoose": "^5.5.8",
		"nunjucks": "^3.2.0",
		"personality-text-summary": "^2.2.0",
		"ramda": "^0.26.1",
		"rollbar": "^2.8.1",
		"slugify": "^1.3.4",
		"vue": "^2.6.10",
		"vue-server-renderer": "^2.6.10",
		"watson-developer-cloud": "^3.18.3"
	},
	"devDependencies": {
		"@iampeterbanjo/diva": "^1.0.0",
		"@types/boom": "^7.3.0",
		"@types/mongoose": "^5.5.13",
		"@types/node": "^12.7.2",
		"database-cleaner": "^1.3.0",
		"faker": "^4.1.0",
		"ncp": "^2.0.0",
		"nock": "^10.0.6",
		"nodemon": "^1.18.9",
		"npm-run-all": "^4.1.5",
		"prettier": "1.16.4",
		"sinon": "^7.2.6",
		"typescript": ">=3.2.1 <3.6.0"
	}
}
